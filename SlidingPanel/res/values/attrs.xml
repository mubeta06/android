<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- SlidingPanel specific attributes. These attributes are used to configure
         a SlidingPanel from XML. -->
    <declare-styleable name="SlidingPanel">
        <!-- Identifier for the child that represents the Panel's actuator. -->
        <attr name="actuator" format="reference" />
        <!-- Specifies desired slide span for the Panel. -->
        <attr name="slideSpan" format="dimension" />
        <!-- Indicates whether the Panel should be opened / closed with an animation
             when the user clicks the actuator. Default is true. -->
        <attr name="animateOnClick" format="boolean" />
    </declare-styleable>
    
</resources>